<view style="margin-bottom:50rpx;width:94%;margin-left:3%;margin-right:3%;;margin-top:50rpx;float:left" ><ad style="border-radius:14rpx" unit-id="adunit-9faecfa51a96cd44"></ad></view>

<view wx:for="{{newslist}}" wx:key="this"  data-id="{{item.id}}"  class="bigbox" bindtap='toDetail'>
<view  wx:if="{{item.imgtype==1}}" class="imgbox">
<image class="imgborder" style="width:100%;height:100%" mode="widthFix" src='{{item.img}}'></image>
</view>
<view class="shortmarks"   style="height:80rpx;background-color:#fff;width:100%;float:left">
  <view style='font-size:30rpx;float:left;width:50%;height:80rpx;line-height:80rpx;text-indent:30rpx;color:#666'>{{item.txttype}}</view><view style="float:right;width:40%;font-size:28rpx;height:80rpx;line-height:80rpx;text-align:right;margin-right:10%;color:#666">{{item.ctimestr}}</view>
</view>
<view class="titlebox" style="height:160rpx;background-color:#fff;width:94%;margin-left:3%;float:left;font-size:36rpx">{{item.sub_title}}</view>
</view>


<view style="width:100%;text-align:center;margin-bottom:20rpx;color:#666">{{tips}}</view>

